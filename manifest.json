{
	"manifest_version": 2,
	"name": "Clockdocs",
	"description": "Write client documents like Clockwork.",
	"version": "0.2",
	"app": {
		"background": {
			"scripts": ["assets/js/background.js"]
		}
	},
	"icons": { "16": "assets/img/icon-16.png", "48": "assets/img/icon-48.png", "128": "assets/img/icon-128.png" },
	"offline_enabled": true,
	"permissions": [
		"nativeMessaging",
		"clipboardRead",
		"clipboardWrite",
		"fileBrowserHandler",
		{"fileSystem": ["write", "retainEntries", "directory"]},
		"identity",
		"storage",
		"syncFileSystem",
		"unlimitedStorage"
	]
}
